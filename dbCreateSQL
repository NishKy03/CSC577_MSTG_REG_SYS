--STUDENT TABLE
CREATE TABLE STUDENT(
    STUID INT(5) NOT NULL,
    STUNAME VARCHAR(50) NOT NULL,
    STUPNO VARCHAR(11) NOT NULL,
    STUEMAIL VARCHAR(30) NOT NULL,
    STUPASSWORD VARCHAR(30) NOT NULL,
    STUGENDER CHAR(1),
    STUADDRESS VARCHAR(100),
    STUDOB DATE,
    FATHERNAME VARCHAR(50),
    MOTHERNAME VARCHAR(50),
    SALARY DECIMAL(10,2),
    PRIMARY KEY (STUID)
    );


--CLERK TABLE

CREATE TABLE CLERK(
    CLERKID INT(5) NOT NULL,
    CLERKNAME VARCHAR(50) NOT NULL,
    CLERKPNO VARCHAR(11),
    CLERKDOB DATE,
    CLERKEMAIL VARCHAR(30),
    CLERKTYPE VARCHAR(10),
    CLERKPASSWORD VARCHAR(30) NOT NULL,
    PRIMARY KEY (CLERKID)
    );
    

--PRINCIPAL TABLE

CREATE TABLE PRINCIPAL (
    PRINCIPALID INT(5) NOT NULL PRIMARY KEY,
    PRINCIPALNAME VARCHAR(50) NOT NULL,
    PRINCIPALPNO VARCHAR(11) NOT NULL,
    PRINCIPALDOB DATE,
    PRINCIPALEMAIL VARCHAR(30),
    PRINCIPALADDRESS VARCHAR(100),
    PRINCIPALPASS VARCHAR(30) NOT NULL,
);

--REGISTRATION TABLE

CREATE TABLE REGISTRATION (
    REGNO INT(5) NOT NULL AUTO_INCREMENT,  
    STUID INT(5),
    PRINCIPALID INT(5),
    REGDATE DATE,
    CLERKID INT(5),
    PRIMARY KEY (REGNO),
    FOREIGN KEY (STUID) REFERENCES STUDENT(STUID), 
    FOREIGN KEY (PRINCIPALID) REFERENCES PRINCIPAL(PRINCIPALID), 
    FOREIGN KEY (CLERKID) REFERENCES CLERK(CLERKID)
);